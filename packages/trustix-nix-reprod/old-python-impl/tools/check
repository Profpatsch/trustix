#!/usr/bin/env python
from lib import (
    watch_recursive,
    get_watch_files,
    ROOT_DIR,
    run_cmd,
    icon,
)
from colors import color  # type: ignore
import os.path
import typing
import shlex
import sys


def run() -> typing.List[int]:
    codes: typing.List[int] = []

    cmds = [
        # ["mypy", ROOT_DIR],
        ["flake8", ROOT_DIR],
        ["black", "--quiet", "--check"] + get_watch_files(),
    ]

    for cmd in cmds:
        cmd_string = shlex.join(
            [tok.replace(ROOT_DIR + os.path.sep, "") for tok in cmd]
        )
        print(
            icon(cmd_string),
            color(
                cmd_string,
                fg="green",
            ),
        )
        code = run_cmd(cmd)
        if code != 0:
            print(
                icon(cmd_string),
                color(
                    cmd_string,
                    fg="red",
                ),
                f"Exited with status {code}",
            )
        codes.append(code)

    return codes


if __name__ == "__main__":
    watch_mode = "--watch" in sys.argv

    if watch_mode:
        watch_recursive(get_watch_files(), run)
    else:
        exit(max(run()))
